mixin Faq(config, index)
  .accordion-item.mb-2.rounded.overflow-hidden
    h2(id=`heading${config.id}`).accordion-header
      button.accordion-button.px-4(type='button' data-bs-toggle='collapse'  class=index == 0 ? false : 'collapsed'  data-bs-target=`#collapse${config.id}` aria-expanded='true' aria-controls=`collapse${config.id}`)
        span.mb-0.text-start.fs-0.text-900.fw-medium!=config.title
    .accordion-collapse.collapse(id=`collapse${config.id}` class=index == 0 ? 'show' : false  aria-labelledby=`heading${config.id}`  data-bs-parent='#accordionExample')
      .accordion-body.bg-primary-gradient.px-4!=config.description
        
