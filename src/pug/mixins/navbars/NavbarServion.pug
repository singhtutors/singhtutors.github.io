mixin NavbarServion
  nav.navbar.navbar-expand-lg.navbar-dark.fixed-top.py-4.d-block(data-navbar-on-scroll)
    .container
      a.navbar-brand(href='index.html')
        img(src=`${CWD}assets/img/gallery/logo.png`   height="24"  alt='...')
        
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon 
      #navbarSupportedContent.collapse.navbar-collapse.border-top.border-lg-0.mt-4.mt-lg-0
        ul.navbar-nav.ms-auto.pt-2.pt-lg-0.font-base
          li.nav-item.px-2(data-anchor)
            a.nav-link.fw-medium(aria-current='page', href='#home' class= currentPage === 'index' ? 'active' : false ) Home
          li.nav-item.px-2(data-anchor)
            a.nav-link(href='#aboutUs') About us
          li.nav-item.px-2(data-anchor)
            a.nav-link(href='#clients') Clients
          li.nav-item.px-2(data-anchor)
            a.nav-link(href='#faq') Faq
          
        form.ps-lg-5
          a.btn.btn-primary.order-1.order-lg-0( href="#!") CONTACT US